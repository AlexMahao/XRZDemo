<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <FrameLayout
        android:id="@+id/fragment_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <View

        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_small" />
    <RadioGroup
        android:id="@+id/rg_main_menu"
        android:orientation="horizontal"
        android:background="@color/gray_menu"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <RadioButton
            android:drawableTop="@drawable/selector_explore_shop"
            style="@style/MainMenuRadioButton"

            android:layout_height="match_parent"
            android:text="探店" />
        <RadioButton
            android:drawableTop="@drawable/selector_broad_wood"
            style="@style/MainMenuRadioButton"
            android:text="体验" />
        <RadioButton
            android:drawableTop="@drawable/selector_classification"
            style="@style/MainMenuRadioButton"
            android:text="分类" />
        <RadioButton
            android:drawableTop="@drawable/selector_more"
            style="@style/MainMenuRadioButton"
            android:text="我的" />

    </RadioGroup>


</LinearLayout>
