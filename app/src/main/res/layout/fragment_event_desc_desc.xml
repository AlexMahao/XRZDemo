

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mahao.xiaorizi.fragments.EventDescDescFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/menpai1"
        android:layout_marginTop="5dp"
        android:src="@mipmap/menpai1"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/menpai2"
            android:layout_below="@id/menpai1"
            android:src="@mipmap/menpai2"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/menpai3"
            android:layout_alignBottom="@id/menpai2"
            android:layout_marginBottom="15dp"
            android:src="@mipmap/menpai3"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content" />

        <TextView
            android:text="标题"
            android:id="@+id/event_disc_title"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_alignTop="@id/menpai2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="30dp">
        <View
            android:background="#000"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            />
        <TextView
            android:id="@+id/event_disc_t1"
            android:text="营业时间"
            android:padding="5dp"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_toRightOf="@id/event_disc_t1"
            android:background="#000"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            />


    </RelativeLayout>
    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/event_disc_date"
        android:text="每天"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="30dp">
        <View
            android:background="#000"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            />
        <TextView
            android:id="@+id/event_disc_t2"
            android:text="电话"
            android:padding="5dp"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_toRightOf="@id/event_disc_t2"
            android:background="#000"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            />


    </RelativeLayout>
    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/event_disc_tel"
        android:text="010-64332569"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:id="@+id/event_disc_tel_img"
        android:src="@mipmap/call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="30dp">
        <View
            android:background="#000"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            />
        <TextView
            android:id="@+id/event_disc_t3"
            android:text="地址"
            android:padding="5dp"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_toRightOf="@id/event_disc_t3"
            android:background="#000"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            />


    </RelativeLayout>
    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/event_disc_address"
        android:text="倒萨科技和贷款拉斯加短裤拉斯加短裤辣椒水考虑"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:id="@+id/event_disc_address_img"
        android:src="@mipmap/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"

        />
</LinearLayout>